<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/LL">


    <TextView android:text="Ingrese los numeros que desea operar" android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero1"
        android:id="@+id/textView"
        android:layout_weight="0.05" />

    <EditText
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/eNumero1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero2"
        android:id="@+id/textView2"
        android:layout_weight="0.05" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/eNumero2" />

    <RadioGroup
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:id="@+id/eRadioGroup">

        <RadioButton
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:text="Suma"
            android:id="@+id/eSuma"
            android:checked="false" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resta"
            android:id="@+id/eResta"
            android:checked="false" />

        <RadioButton
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:text="Multiplicación"
            android:id="@+id/eMultiplicación"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Division"
            android:id="@+id/eDivision"
            android:checked="false" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/eCalcular"
        android:layout_weight="0.05" />

    <TextView
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:id="@+id/eResultado"
        android:layout_weight="0.07" />


</LinearLayout>
